[date]
command=[ "$button" ] && notify-send -t 20000 -c calendar -a Date "$(date '+%A %d.%m.%Y')" "$(cal)"; date +'󰃭 %a %x'
interval=1

[time]
command=echo $(clock_icon_from_hour $(date +%k)) $(date +'%H:%M')
interval=1

[sway/scratchpad]
full_text=󰖲
command=swaymsg scratchpad show > /dev/null 2>&1

