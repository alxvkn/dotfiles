# vim:ft=swayconfig

mode "mark" {
    bindsym --to-code {
        q mark --toggle q; mode "default"
        w mark --toggle w; mode "default"
        e mark --toggle e; mode "default"
        r mark --toggle r; mode "default"
        t mark --toggle t; mode "default"
        y mark --toggle y; mode "default"
        u mark --toggle u; mode "default"
        i mark --toggle i; mode "default"
        o mark --toggle o; mode "default"
        p mark --toggle p; mode "default"
        a mark --toggle a; mode "default"
        s mark --toggle s; mode "default"
        d mark --toggle d; mode "default"
        f mark --toggle f; mode "default"
        g mark --toggle g; mode "default"
        h mark --toggle h; mode "default"
        j mark --toggle j; mode "default"
        k mark --toggle k; mode "default"
        l mark --toggle l; mode "default"
        z mark --toggle z; mode "default"
        x mark --toggle x; mode "default"
        c mark --toggle c; mode "default"
        v mark --toggle v; mode "default"
        b mark --toggle b; mode "default"
        n mark --toggle n; mode "default"
        m mark --toggle m; mode "default"

        Return mode "default"
        Escape mode "default"
    }
}
bindsym --to-code $mod+m mode "mark"

mode "go_to_mark" {
    bindsym --to-code {
        q [con_mark=q] focus; mode "default"
        w [con_mark=w] focus; mode "default"
        e [con_mark=e] focus; mode "default"
        r [con_mark=r] focus; mode "default"
        t [con_mark=t] focus; mode "default"
        y [con_mark=y] focus; mode "default"
        u [con_mark=u] focus; mode "default"
        i [con_mark=i] focus; mode "default"
        o [con_mark=o] focus; mode "default"
        p [con_mark=p] focus; mode "default"
        a [con_mark=a] focus; mode "default"
        s [con_mark=s] focus; mode "default"
        d [con_mark=d] focus; mode "default"
        f [con_mark=f] focus; mode "default"
        g [con_mark=g] focus; mode "default"
        h [con_mark=h] focus; mode "default"
        j [con_mark=j] focus; mode "default"
        k [con_mark=k] focus; mode "default"
        l [con_mark=l] focus; mode "default"
        z [con_mark=z] focus; mode "default"
        x [con_mark=x] focus; mode "default"
        c [con_mark=c] focus; mode "default"
        v [con_mark=v] focus; mode "default"
        b [con_mark=b] focus; mode "default"
        n [con_mark=n] focus; mode "default"
        m [con_mark=m] focus; mode "default"

        Return mode "default"
        Escape mode "default"
    }
}
bindsym --to-code $mod+apostrophe mode "go_to_mark"
